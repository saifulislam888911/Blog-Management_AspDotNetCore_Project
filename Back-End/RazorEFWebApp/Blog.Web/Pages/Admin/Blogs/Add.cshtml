@page
@model Blog.Web.Pages.Admin.Blogs.AddModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
	<div class="container">
		<h1>Add Blog Post</h1>
	</div>
</div>

<div>
	<div class="container">
		<form method="post">
			<div class="mb-3">
				<label for="heading" class="form-label">Heading</label>
				<input type="text" id="heading" class="form-control" asp-for="AddBlogPostRequest.Heading">
			</div>

			<div class="mb-3">
				<label for="pageTitle" class="form-label">Page Title</label>
				<input type="text" id="pageTitle" class="form-control" asp-for="AddBlogPostRequest.PageTitle">
			</div>

			<div class="mb-3">
				<label for="content" class="form-label">Content</label>
				<textarea id="content" class="form-control" asp-for="AddBlogPostRequest.Content"></textarea>
			</div>

			<div class="mb-3">
				<label for="shortDescription" class="form-label">Short Description</label>
				<input type="text" id="shortDescription" class="form-control" asp-for="AddBlogPostRequest.ShortDescription">
			</div>

			<div class="mb-3">
				<label for="featuredImageUrl" class="form-label">Featured Image Url</label>
				<input type="text" id="featuredImageUrl" class="form-control" asp-for="AddBlogPostRequest.FeatureImageUrl">
			</div>

			<div class="mb-3">
				<label for="urlHandle" class="form-label">Url Handle</label>
				<input type="text" id="urlHandle" class="form-control" asp-for="AddBlogPostRequest.UrlHandle">
			</div>

			<div class="mb-3">
				<label for="publishedDate" class="form-label">Published Date</label>
				<input type="date" id="publishedDate" class="form-control" asp-for="AddBlogPostRequest.PublishedDate">
			</div>

			<div class="mb-3">
				<label for="author" class="form-label">Author</label>
				<input type="text" id="author" class="form-control" asp-for="AddBlogPostRequest.Author">
			</div>

			<div class="form-check mb-3">
				<input type="checkbox" id="isVisible" class="form-check-input" asp-for="AddBlogPostRequest.Visible">
				<label for="isVisible" class="form-check-label">Is Visible</label>
			</div>

			<div class="mb-3">
				<button type="submit" class="btn btn-primary">
					Submit
				</button>
			</div>
		</form>
	</div>
</div>